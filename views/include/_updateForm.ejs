<form method="POST" id="update_task">
    <div class="update_task">
        <div class="form-group">
            <label for="summary" class="text-light">Ticket Summary</label>
            <input type="hidden" name="id" value="<%= task._id%>">
            <input type="text" name="summary" value="<%= task.summary%>" placeholder="Update task (120 characters max)" maxlength="120">
            <div class="error-message error-message-summary">Maximum length is 120 characters.</div>
        </div>

        <div class="form-group">
            <label for="assignee" class="text-light">Assignee</label>
            <input type="text" name="assignee" value="<%= task.assignee%>" placeholder="Dorothy Marks">
        </div>

        <div class="form-group">
            <label for="dueDate" class="text-light">Due Date</label>
            <input type="date" name="dueDate" value="<%= task.dueDate ? task.dueDate.substr(0, 10) : "" %>" placeholder="">
        </div>
        
        <div class="form-group">
            <label for="status" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-1" name="status" value="Not Started" <%= task.status == 'Not Started' ? 'checked':'' %>>
                <label for="radio-1" class="radio-label">Not Started</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="status" value="In Progress" <%= task.status == 'In Progress' ? 'checked':'' %>>
                <label for="radio-2" class="radio-label">In Progress</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="status" value="Completed" <%= task.status == 'Completed' ? 'checked':'' %>>
                <label for="radio-3" class="radio-label">Completed</label>
            </div>
        </div>

        <div class="form-group">
            <label for="priority" class="text-light">Priority</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="priority" value="Low" <%= task.priority == 'Low' ? 'checked':'' %>>
                <label for="radio-4" class="radio-label">Low</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="priority" value="Medium" <%= task.priority == 'Medium' ? 'checked':'' %>>
                <label for="radio-5" class="radio-label">Medium</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="priority" value="High" <%= task.priority == 'High' ? 'checked':'' %>>
                <label for="radio-6" class="radio-label">High</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-7" name="priority" value="Critical" <%= task.priority == 'Critical' ? 'checked':'' %>>
                <label for="radio-7" class="radio-label">Critical</label>
            </div>
        </div>

        <div class="form-group">
            <label for="detail" class="text-light">Ticket details</label>
            <textarea type="text" name="detail" rows="5" placeholder="Add additional details (1000 characters max)" maxlength="1000"><%= task.detail %> </textarea>
            <div class="error-message error-message-detail">maximum length is 1000 characters.</div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>