
<!-- include header -->
  <%- include('include/_header')%>
<!-- /include header -->

    <!-- Main Site -->
    <main id="site-main">
      <div class="container">
            <div class="form-title text-center">
                <h2 class="text-dark">All Tickets</h2>
                <span class="text-light">View and manage your tickets</span>
            </div>
            <div class="box-nav d-flex justify-between">
                <a href="/add-task" class="border-shadow">
                  <span class="text-gradient"><i class="fa-solid fa-plus"></i> New Ticket
                  </span>
                </a>
            </div>
          
          <!-- Form Handling -->
          <form action="/" method="POST">
              <table class="table">
                 <thead class="thead-dark">
                  <tr>
                      <th>Row</th> 
                      <th>Ticket Id</th> 
                      <th>Summary</th> 
                      <th>Status</th> 
                      <th>Assignee</th> 
                      <th>Due Date</th> 
                      <th>Priority</th> 
                      <th><!-- buttons here --></th>
                  </tr>
                 </thead>
                 <tbody>
                  <%- include('include/_show')%>
                 </tbody>
              </table>
          </form>
      </div>
  </main>
<!-- /Main Site -->

